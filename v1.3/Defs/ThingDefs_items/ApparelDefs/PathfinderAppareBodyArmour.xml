      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>

      <tags>
        <li>PathfinderMilitary</li>
      </tags>
       
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
    </apparel>
    
    <thingSetMakerTags>
      <li>RewardSpecial</li>
    </thingSetMakerTags>
    
  </ThingDef>
  
