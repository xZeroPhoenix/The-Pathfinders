    <techLevel>Ultra</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>PathfinderArmourManufacturing</researchPrerequisite>
      <skillRequirements>
        <Crafting>12</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Items/Apparel/PathfinderPowerArmour/PathfinderPowerArmour</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.15</drawSize>
    </graphicData>
    <generateCommonality>1</generateCommonality>
    <statBases>
      <WorkToMake>76000</WorkToMake>
      <MaxHitPoints>350</MaxHitPoints>
      <Mass>11</Mass>
      <Flammability>0.1</Flammability>
      <ArmorRating_Sharp>1.15</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.75</ArmorRating_Blunt>
      <ArmorRating_Heat>0.55</ArmorRating_Heat>
      <Insulation_Cold>38</Insulation_Cold>
      <Insulation_Heat>18</Insulation_Heat>
      <EquipDelay>10</EquipDelay>
