<Defs>
 <!-- Pathfinder Ballistic Lining -->
 <!-- ================================================================================================================= -->
  <ThingDef ParentName="PathfinderApparelArmorPowerBase">
    <defName>Apparel_PathfinderBallisticLining</defName>
    <label>Pathfinder Ballistic Lining</label>
    <description>A typical Pathfinder Ballistic Lining, provides for good overall protection and allows for limited exposure to toxic or extreme environments, does not fit humans</description>
    <techLevel>Ultra</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>PathfinderArmourManufacturing</researchPrerequisite>
      <skillRequirements>
        <Crafting>10</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Items/Apparel/BallisticLining/BallisticLining</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.15</drawSize>
    </graphicData>
    <generateCommonality>1</generateCommonality>
    <statBases>
      <MarketValue>1600</MarketValue>
      <WorkToMake>18800</WorkToMake>
      <MaxHitPoints>300</MaxHitPoints>
      <Mass>6.5</Mass>
      <DeteriorationRate>0</DeteriorationRate>
      <Flammability>0.0</Flammability>
      <ArmorRating_Sharp>0.58</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.12</ArmorRating_Blunt>
      <ArmorRating_Heat>0.15</ArmorRating_Heat>
      <Insulation_Cold>16</Insulation_Cold>
      <Insulation_Heat>12</Insulation_Heat>
      <EquipDelay>5</EquipDelay>
    </statBases>
	  
	  <comps>
		  <li Class="CompProperties_Biocodable"/>
	  </comps>
	  
    <equippedStatOffsets>
      <MoveSpeed>0.0</MoveSpeed>
      <ToxicSensitivity>-0.2</ToxicSensitivity>
    </equippedStatOffsets>

    <costList>
      <Plasteel>10</Plasteel>
      <Hyperweave>50</Hyperweave>
      <Steel>80</Steel>
      <ComponentSpacer>1</ComponentSpacer>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    
    <tradeTags>
      <li>HiTechArmor</li>
    </tradeTags>
    
    <apparel>
      
        <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
        </bodyPartGroups>
      
      <wornGraphicPath>Things/Items/Apparel/BallisticLining/BallisticLining</wornGraphicPath>
      
      <layers>
        <li>OnSkin</li>
      </layers>

      <tags>
        <li>PathfinderMilitary</li>
      </tags>
       
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
    </apparel>
    
    <thingSetMakerTags>
      <li>RewardSpecial</li>
    </thingSetMakerTags>
    
  </ThingDef>
	<!-- PathfinderHighShirt -->
