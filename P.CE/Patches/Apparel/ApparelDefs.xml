            <Bulk>30</Bulk>
            <WornBulk>6</WornBulk>
          </value>
        </li>
        
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="Apparel_PathfinderBallisticLining"]/statBases/ArmorRating_Blunt</xpath>
