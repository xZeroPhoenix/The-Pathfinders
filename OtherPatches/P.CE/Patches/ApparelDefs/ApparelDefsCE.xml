<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>The Pathfinders</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>

        <!-- Pathfinder Ballistic Lining -->
        
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="Apparel_PathfinderBallisticLining"]/statBases</xpath>
          <value>
            <Bulk>30</Bulk>
            <WornBulk>6</WornBulk>
          </value>
        </li>
        
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="Apparel_PathfinderBallisticLining"]/statBases/ArmorRating_Blunt</xpath>
          <value>
            <ArmorRating_Blunt>8</ArmorRating_Blunt>
          </value>
        </li>

        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="Apparel_PathfinderBallisticLining"]/statBases/ArmorRating_Sharp</xpath>
          <value>
            <ArmorRating_Sharp>5</ArmorRating_Sharp>
          </value>
        </li>
        
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="Apparel_PathfinderBallisticLining"]/apparel/bodyPartGroups</xpath>
          <value>
            <li>Hands</li>
            <li>Feet</li>
          </value>
          
        </li>

		  <!-- PathfinderHighShirt-->

		  <li Class="PatchOperationReplace">
