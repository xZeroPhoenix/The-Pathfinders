				  <costStuffCount>20</costStuffCount>
			  </value>
		  </li>


        <!-- Pathfinder Basic Helmet -->

        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="Apparel_PathfinderStandardHelmet"]/statBases</xpath>
          <value>
            <Bulk>4</Bulk>
            <WornBulk>1</WornBulk>
          </value>
        </li>

        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="Apparel_PathfinderStandardHelmet"]/statBases/ArmorRating_Blunt</xpath>
