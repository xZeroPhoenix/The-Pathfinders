        </li>

        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="Apparel_PathfinderStandardHelmet"]/costList</xpath>
          <value>
            <costList>
              <Steel>40</Steel>
              <DevilstrandCloth>20</DevilstrandCloth>
            </costList>
          </value>
        </li>
        
        <!-- <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="Apparel_PathfinderStandardHelmet"]/apparel/layers</xpath>
          <value>
            <li>MiddleHead</li>
          </value>
        </li> -->
		  <!-- Pathfinder Power Armour -->

        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="Apparel_PathfinderArmour"]/statBases</xpath>
          <value>
            <Bulk>85</Bulk>
            <WornBulk>12</WornBulk>
          </value>
			
        </li>
		 <li Class="PatchOperationAdd">
			  <xpath>Defs/ThingDef[defName="Apparel_PathfinderArmour"]/apparel/layers</xpath>
			  <value>
				  <li>Backpack</li>
				  <li>Webbing</li>
			  </value>
		  </li>
		  
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="Apparel_PathfinderArmour"]/statBases/MaxHitPoints</xpath>
          <value>
            <MaxHitPoints>600</MaxHitPoints>
