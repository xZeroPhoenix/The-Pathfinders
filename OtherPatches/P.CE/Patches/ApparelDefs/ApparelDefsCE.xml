		  <li Class="PatchOperationReplace">
			  <xpath>Defs/ThingDef[defName="Apparel_PathfinderAdvHelmet"]/costList/Plasteel</xpath>
			  <value>
				  <Plasteel>80</Plasteel>
				  <DevilstrandCloth>25</DevilstrandCloth>
			  </value>
		  </li>
		  <li Class="PatchOperationAdd">
			  <xpath>Defs/ThingDef[defName="Apparel_PathfinderAdvHelmet"]/apparel</xpath>
			  <value>
				  <immuneToToxGasExposure>true</immuneToToxGasExposure>
			  </value>
		  </li>
    
      </operations>
    </match>
  </Operation>

</Patch>