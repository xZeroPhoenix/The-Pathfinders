      <primaryMagazineCount>
        <min>2</min>
        <max>5</max>
      </primaryMagazineCount>
    </li>
  </value>
</li>

    <li Class="PatchOperationAddModExtension">
  <xpath>Defs/PawnKindDef[defName="PathfinderBaseDrifters"]</xpath>
  <value>
    <li Class="CombatExtended.LoadoutPropertiesExtension">
      <primaryMagazineCount>
        <min>2</min>
        <max>5</max>
      </primaryMagazineCount>
    </li>
  </value>
</li>

        <li Class="PatchOperationAddModExtension">
    <xpath>Defs/PawnKindDef[defName="PathfinderGuard"]</xpath>
    <value>
      <li Class="CombatExtended.LoadoutPropertiesExtension">
        <primaryMagazineCount>
          <min>2</min>
          <max>5</max>
        </primaryMagazineCount>
      </li>
    </value>
  </li>
        <li Class="PatchOperationAddModExtension">
    <xpath>Defs/PawnKindDef[defName="PathfinderLightGuard"]</xpath>
