      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Uranium</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
        <li>Uranium</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
		<Ammo_7mmCoilgun_Sabot>500</Ammo_7mmCoilgun_Sabot>

</products>
  </RecipeDef>

