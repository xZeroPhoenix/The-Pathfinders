    <jobString>Making 7mm Coilgun (Sabot) cartridges.</jobString>
    <workAmount>2520</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
