    <jobString>Making 10mm Coilgun (Sabot) cartridges.</jobString>
    <workAmount>3528</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
