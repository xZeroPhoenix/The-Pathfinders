    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
        <li>Uranium</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_10mmCoilgun_Sabot>500</Ammo_10mmCoilgun_Sabot>
    </products>
  </RecipeDef>

